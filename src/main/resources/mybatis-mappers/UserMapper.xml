<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javaweb.ks.dao.UserDao">

    <update id="changeUserInfo">
        update user t
        <set>
            <if test=" nickname != null">
                nickname = #{nickname},
            </if>
            <if test="avatar != null">
                avatar = #{avatar},
            </if>
            <if test="site != null">
                site = #{site},
            </if>
            <if test="sign != null">
                sign = #{sign},
            </if>
        </set>
        where t.ID = #{ID}
    </update>

</mapper>